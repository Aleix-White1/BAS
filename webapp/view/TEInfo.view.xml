<mvc:View
	controllerName="zdigitalticket.controller.TEInfo"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
>
	<Page showHeader="false" class="colorBackground" title="{i18n>TEInfo.title}" >
		<content>
			<ScrollContainer vertical="true" class="sapUiSmallMargin">
				<HBox justifyContent="SpaceBetween">
					<Text text="{
						parts: [
							'localBinding>/TEInfo/Date'
						],
						formatter: '.formatDate'
					}"/>
				</HBox>
				
				<VBox class="formFilters">
					<HBox justifyContent="SpaceBetween" >
						<HBox justifyContent="SpaceBetween">
							<VBox width="40px" height="40px" class="lineLogo" justifyContent="Center" alignItems="Center">
								<customData>
									<core:CustomData
										key="line"
										value="{localBinding>/TEInfo/Line}"
										writeToDom="true"
									/>
								</customData>
								<Text text="L{localBinding>/TEInfo/Line}"/>
							</VBox>
						</HBox>
					</HBox>
				</VBox>
				
				<Text text=" "/>  <!-- Spacer -->

				<VBox class="formFilters">
					<HBox justifyContent="SpaceBetween" >
						<Label text="Tren" /><Text text="{localBinding>/TEInfo/Train}"/>
					</HBox>
					
					<HBox justifyContent="SpaceBetween" >
						<Label text="Hora de salida" /><Text text="{localBinding>/TEInfo/departureTime}"/>
					</HBox>
					<HBox justifyContent="SpaceBetween" >
						<Label text="Lugar de salida" /><Text text="{/TEInfo/departureStationCode} ({localBinding>/TEInfo/departureStationName})"/>
					</HBox>
					<HBox justifyContent="SpaceBetween" >
						<Label text="Vía" /><Text text="{localBinding>/TEInfo/departureTrack}"/>
					</HBox>
					
					<HBox justifyContent="SpaceBetween" >
						<Label text="Hora actual" /><Text text="{localBinding>/TEInfo/currTime}"/>
					</HBox>
					<HBox justifyContent="SpaceBetween" >
						<Label text="Lugar actual" /><Text text="{/TEInfo/currStationCode} ({localBinding>/TEInfo/currStationName})"/>
					</HBox>
					<HBox justifyContent="SpaceBetween" >
						<Label text="Vía" /><Text text="{localBinding>/TEInfo/currTrack}"/>
					</HBox>
					
				</VBox>	
				
				<VBox>
					<Text text=" "/>  <!-- Spacer -->
					<Text text=" "/>  <!-- Spacer -->
				</VBox>
			</ScrollContainer>
		</content>
	</Page>
	
</mvc:View>
