				<!--				<Text text="{localBinding>departureTime}"/>-->
				<!--				<Text text="{localBinding>dAnt}"/>-->
				<!--				<Text text="{localBinding>TrainStation}"/>-->
				<!--				<Text text="{localBinding>track}"/>-->
				<!--			</cells>-->
