				<Table items="{localBinding>/StationInfo/StationInfoTrainSet}">
					<columns>
						<Column hAlign="Center"><Text text="Tren"/></Column>
						<Column hAlign="Center"><Text text="Salida"/></Column>
						<Column hAlign="Center"><Text text="dAnt"/></Column>
						<Column hAlign="Center"><Text text="EstaciÃ³n"/></Column>
						<Column hAlign="Center"><Text text="Via"/></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{localBinding>trainCode}"/>
								<Text text="{
									parts: [
										'localBinding>arrivalTime'
									],
									formatter: '.formatTime'
								}"/>
								<Text text="{
									parts: [
										'localBinding>secPreviousTrain'
